extends ../layout 

block content
  a.btn.btn-success(href='/users/create') Nuevo Usuario 

  br
  br

  a.btn.btn-dark(href='/') Inicio 

  table.table.table-striped.table-hover 
    thead
      tr
        th(scope='col') #
        th(scope='col') Nombre 
        th(scope='col') Email 
        th(scope='col') Verificado
        th(scope='col')
        th(scope='col') 
  tbody 
    each user in users
      tr 
        td(scope='row')
          = user.id
        td= user.name
        td= user.email 
        td= user.verified ? 'SI' : 'NO'
        td
          a.btn(href='users/' + user.id + '/update') Editar 
        td
          form.inline(method='post' action='users/' + user.id + '/delete')
            input(type='hidden' name='id' value= user.id)
            button.link-button.btn-danger(type='submit' name='submit_param' value='submit_value' class='btn')
              = 'Eliminar' 
